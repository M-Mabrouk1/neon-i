##### Sxhkd
#reload sxhkd:
super + shift + s
	pkill -USR1 -x sxhkd && notify-send "sxhkd reloaded"


##### Run Apps
# alacritty
super + Return
   alacritty

# nemo
super + n
    nemo

#VS-code
super + c
    code

# brave
super + b
    brave

# brave
ctrl + shift + n
    brave -incognito www.google.com

# copyq
super + shift + c
	copyq toggle

# Firefox
super + f
    firefox
    #XDG_CONFIG_HOME=$HOME/.config/gtk-Firefox firefox

#Pavucontrol
super + v
    pavucontrol

# Github desktop
super + g
	github-desktop

#arcolinux-welcome-app
ctrl + alt + w
     arcolinux-welcome-app

#arcolinux-tweak-tool
ctrl + alt + e
    arcolinux-tweak-tool

# logout
super + shift + x
    arcolinux-logout

##### Screenshot
#Flameshot
@Print
    flameshot full -p ~/Desktop/Screenshots

#Flameshot gui
shift + @Print
    flameshot gui

##### Application launcher
# dmenu
super + shift + d
	dmenu_run -i -nb '#191919' -nf '#ae34eb' -sb '#ae34eb' -sf '#191919' -fn 'NotoSans Nerd Font:bold:pixelsize=14'

#Rofi Fullscreen
super + F11
    rofi -theme-str 'window \{width: 100%;height: 100%;\}' -show drun

#Rofi
super + d
    rofi -show drun

# dmenu
super + shift + e
    rofi -show emoji

##### Notifications
# Notifications History
super + shift + n
    dunstctl history-pop

ctrl + space
    dunstctl close

super + shift + p
    dunstctl set-paused toggle && dunstify "Notifications ON"

##### Scripts
#Picom Toggle
ctrl + alt + o
    "$SCRIPTPATH"/picom/picom-toggle.sh
#Mount android
super + shift + m
    ~/Dotfiles/scripts/mtp.sh

#####Misc
#Xkill
super + Escape
    xkill

#Hide polybar
super + y
    polybar-msg cmd toggle

# toggle fan
super + shift + z
    ec4Linux change-state

##### Multimedia
#Raises volume
XF86AudioRaiseVolume
    "$SCRIPTPATH"/scripts/changevolume up
    # amixer set Master 10%+
#Lowers volume
XF86AudioLowerVolume
    "$SCRIPTPATH"/scripts/changevolume down
    # amixer set Master 10%-
#Mute
XF86AudioMute
    "$SCRIPTPATH"/scripts/changevolume mute
    # amixer -D pulse set Master 1+ toggle

#Playerctl works for Pragha, Spotify and others
#Delete the line for playerctl if you want to use mpc
#and replace it with the corresponding code
#mpc works for e.g.ncmpcpp
#mpc toggle
#mpc next
#mpc prev
#mpc stop

#PLAY
XF86AudioPlay
    playerctl play-pause

#Next
XF86AudioNext
    playerctl next

#previous
XF86AudioPrev
    playerctl previous

#Stop
XF86AudioStop
    playerctl stop

#Brightness up
# XF86MonBrightnessUp
#     xbacklight -inc 10

#Brightness up
XF86MonBrightnessUp
    "$SCRIPTPATH"/scripts/changebrightness up

#Brightness down
XF86MonBrightnessDown
    "$SCRIPTPATH"/scripts/changebrightness down

