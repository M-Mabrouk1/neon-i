##### Sxhkd
#reload sxhkd:
super + shift + s
	pkill -USR1 -x sxhkd && notify-send "sxhkd reloaded"

##### Run Apps
#launch apps
super + {Return,n,c,b,f,v,g,o}
    {alacritty,nemo,code,brave,firefox,pavucontrol,github-desktop,obs}

#run apps nvidia
super + shift + n; {o} 
    prime-run {obs}
#Misc
super + shift + {c,x,e,z}
	{copyq toggle,archlinux-logout,rofi -show emoji,ec4Linux change-state}
    
ctrl + shift + n
    brave --incognito www.google.com

##### Screenshot
#Flameshot
@Print
    flameshot full -p ~/Desktop/Screenshots

#Flameshot gui
shift + @Print
    flameshot gui

##### Application launcher
# dmenu
super + {d,Escape,y}
    {rofi -show drun,xkill,polybar-msg cmd toggle}

super + shift + d
	dmenu_run -i -nb '#191919' -nf '#ae34eb' -sb '#ae34eb' -sf '#191919' -fn 'NotoSans Nerd Font:bold:pixelsize=14'

#Rofi Fullscreen
super + F11
    rofi -theme-str 'window \{width: 100%;height: 100%;\}' -show drun

##### Notifications
# Notifications History
super + shift + b
    dunstctl history-pop

alt + space
    dunstctl close

super + shift + p
    dunstctl set-paused toggle && dunstify "Notifications ON"

##### Scripts
#Picom Toggle
ctrl + alt + o
    "$SCRIPTPATH"/picom/picom-toggle.sh
#Mount android
super + shift + m
    ~/Dotfiles/scripts/mtp.sh

##### Multimedia
#Raises volume
XF86AudioRaiseVolume
    "$SCRIPTPATH"/scripts/changevolume up
    # amixer set Master 10%+
#Lowers volume
XF86AudioLowerVolume
    "$SCRIPTPATH"/scripts/changevolume down
    # amixer set Master 10%-
#Mute
XF86AudioMute
    "$SCRIPTPATH"/scripts/changevolume mute
    # amixer -D pulse set Master 1+ toggle

#PLAY
XF86AudioPlay
    playerctl play-pause

#Next
XF86AudioNext
    playerctl next

#previous
XF86AudioPrev
    playerctl previous

#Stop
XF86AudioStop
    playerctl stop

#Brightness up
XF86MonBrightnessUp
    "$SCRIPTPATH"/scripts/changebrightness up

#Brightness down
XF86MonBrightnessDown
    "$SCRIPTPATH"/scripts/changebrightness down

